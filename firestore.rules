rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'risks' collection
    match /risks/{docId} {
      allow list, read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    // Rules for the 'issues' collection
    match /issues/{docId} {
      allow list, read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    // Rules for the 'products' collection
    match /products/{docId} {
      allow list, read: if isSignedIn();
      // Products are managed in-app or via console, so writes can be restricted
      allow create, update, delete: if isSignedIn(); 
    }

    // Rules for the 'users' collection
    match /users/{uid} {
       // Users can read all profiles for leaderboard/display names
      allow list, read: if isSignedIn();
      // A user can only write to their own document
      allow create, update, delete: if isSignedIn() && request.auth.uid == uid;
    }
  }
}
