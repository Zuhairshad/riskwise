rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: only signed-in users
    function isSignedIn() {
      return request.auth != null;
    }

    // ---- Risks collection ----
    match /risks/{docId} {
      allow list, read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    // ---- Issues collection ----
    match /issues/{docId} {
      allow list, read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    // ---- Products collection ----
    match /products/{docId} {
      // Allow read-only access for any authenticated user
      allow list, read: if isSignedIn();
      // Lock down writes
      allow write: if false;
    }

    // ---- Users collection ----
    match /users/{userId} {
       // Allow authenticated users to read any profile for leaderboards/etc.
      allow list, read: if isSignedIn();
       // Allow a user to update their own profile information.
      allow update: if isSignedIn() && request.auth.uid == userId;
    }

    // Default: lock everything else down
    match /{document=**} {
      allow read, write: if false;
    }
  }
}