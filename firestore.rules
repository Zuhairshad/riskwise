
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'risks' collection
    match /risks/{riskId} {
      // Allow authenticated users to list, read, create, update, and delete risks.
      allow list, read, create, update, delete: if isSignedIn();
    }

    // Rules for the 'issues' collection
    match /issues/{issueId} {
      // Allow authenticated users to list, read, create, update, and delete issues.
      allow list, read, create, update, delete: if isSignedIn();
    }

    // Rules for the 'products' collection
    match /products/{productId} {
      // Allow authenticated users to list and read products.
      // Writes are disallowed to protect the integrity of project data from the client.
      allow list, read: if isSignedIn();
      allow write: if false;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow authenticated users to list and read user profiles for leaderboards, etc.
      allow list, read: if isSignedIn();
      
      // Allow a user to update their own profile information.
      allow update: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
