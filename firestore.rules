rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // ---- Risks Collection ----
    match /risks/{riskId} {
      // Allow individual document read/write for any signed-in user.
      allow read, write: if isSignedIn();
    }
    // **Crucially, also allow LISTING the entire collection for signed-in users.**
    allow list on /risks: if isSignedIn();

    // ---- Issues Collection ----
    match /issues/{issueId} {
      // Allow individual document read/write for any signed-in user.
      allow read, write: if isSignedIn();
    }
    // **Crucially, also allow LISTING the entire collection for signed-in users.**
    allow list on /issues: if isSignedIn();

    // ---- Products Collection ----
    match /products/{productId} {
      // Allow individual document reads for any signed-in user.
      allow read: if isSignedIn();
      // Products are managed elsewhere, so client writes are disabled.
      allow write: if false;
    }
    // **Crucially, also allow LISTING the entire collection for signed-in users.**
    allow list on /products: if isSignedIn();

    // ---- Users Collection ----
    match /users/{userId} {
      // Allow reading any user's profile.
      allow read: if isSignedIn();
      // Only allow a user to write to their own profile.
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    // **Crucially, also allow LISTING the entire collection for signed-in users.**
    allow list on /users: if isSignedIn();
  }
}